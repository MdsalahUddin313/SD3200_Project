@{
}


@model SDProject03.Models.LocationsModel;


<div class="container text-center">
    <dt class="col-sm-12 text-centre mb-5">
        <h4>  @Html.DisplayFor(model => model.LocationName), @Html.DisplayFor(model => model.LocationTitle)</h4>
    </dt>

    <dt class="col-sm-12 mb-5">
        <img src="~/Image/@Model.ImageName" asp-append-version="true" width="100%" height="550px" />
    </dt>


    <dd class="col-sm-12">
        Rating:  @Html.DisplayFor(model => model.LocationTitle)
    </dd>
    <dt class="col-sm-4 text-center">

    </dt>
    <dd class="col-sm-12">
        @Html.DisplayFor(model => model.LocationDescription)
    </dd>

    <dd class="col-sm-12 mt-5">

        <iframe src="@Html.DisplayFor(model => model.LocationMap)" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </dd>


    <form asp-action="LocationsDetails">
        <input type="hidden" asp-for="LocationId" />
        <input type="submit" value="Add To Whishlist" class="btn btn-outline-danger"/>
        ||<a asp-action="Index">Back to List</a>
    </form>

</div>

