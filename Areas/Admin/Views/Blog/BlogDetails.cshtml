@{
}

@model SDProject03.Models.BlogPostsModel;


<div class="container text-center">
    <dt class="col-sm-12 text-centre mb-5">
        <h4>  @Html.DisplayFor(model => model.PostsName), @Html.DisplayFor(model => model.BlogTitle)</h4>
    </dt>

    <dt class="col-sm-12 mb-5">
        <img src="@Model.ImageName" asp-append-version="true" width="100%" height="550px" />
    </dt>


    <dd class="col-sm-12">
        Posted Time:  @Html.DisplayFor(model => model.PostedTime)
    </dd>
    <dt class="col-sm-4 text-center">

    </dt>
    <dd class="col-sm-12">
        @Html.DisplayFor(model => model.BlogDescription)
    </dd>
</div>
